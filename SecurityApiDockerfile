FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER $APP_UID
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["Microservices/Security/src/Security.Endpoint.Api/Security.Endpoint.Api.csproj", "Microservices/Security/src/Security.Endpoint.Api/"]
COPY ["Microservices/Security/src/Security.Domain/Security.Domain.csproj", "Microservices/Security/src/Security.Domain/"]
COPY ["Framework/MGH.Core.Domain/MGH.Core.Domain.csproj", "Framework/MGH.Core.Domain/"]
COPY ["Framework/MGH.Core.Infrastructure/MGH.Core.Infrastructure.csproj", "Framework/MGH.Core.Infrastructure/"]
COPY ["Framework/MGH.Core.Infrastructure.Persistence.EF/MGH.Core.Infrastructure.Persistence.EF.csproj", "Framework/MGH.Core.Infrastructure.Persistence.EF/"]
COPY ["Framework/MGH.Core.Infrastructure.Cache.Redis/MGH.Core.Infrastructure.Cache.Redis.csproj", "Framework/MGH.Core.Infrastructure.Cache.Redis/"]
COPY ["Framework/MGH.Core.CrossCutting/MGH.Core.CrossCutting.csproj", "Framework/MGH.Core.CrossCutting/"]
COPY ["Framework/MGH.Core.CrossCutting.Logging/MGH.Core.CrossCutting.Logging.csproj", "Framework/MGH.Core.CrossCutting.Logging/"]
COPY ["Framework/MGH.Core.Infrastructure.Securities/MGH.Core.Infrastructure.Securities.csproj", "Framework/MGH.Core.Infrastructure.Securities/"]
COPY ["Framework/MGH.Core.Infrastructure.MessageBroker.RabbitMq/MGH.Core.Infrastructure.MessageBroker.RabbitMq.csproj", "Framework/MGH.Core.Infrastructure.MessageBroker.RabbitMq/"]
COPY ["Framework/MGH.Core.Infrastructure.MessageBroker/MGH.Core.Infrastructure.MessageBroker.csproj", "Framework/MGH.Core.Infrastructure.MessageBroker/"]
COPY ["Framework/MGH.Core.Infrastructure.HealthCheck/MGH.Core.Infrastructure.HealthCheck.csproj", "Framework/MGH.Core.Infrastructure.HealthCheck/"]
COPY ["Framework/MGH.Core.Infrastructure.ElasticSearch/MGH.Core.Infrastructure.ElasticSearch.csproj", "Framework/MGH.Core.Infrastructure.ElasticSearch/"]
COPY ["Framework/MGH.Core.Application/MGH.Core.Application.csproj", "Framework/MGH.Core.Application/"]
COPY ["Microservices/Security/src/Security.Application/Security.Application.csproj", "Microservices/Security/src/Security.Application/"]
COPY ["Microservices/Security/src/Security.Infrastructure/Security.Infrastructure.csproj", "Microservices/Security/src/Security.Infrastructure/"]
COPY ["Framework/MGH.Core.Endpoint.Swagger/MGH.Core.Endpoint.Swagger.csproj", "Framework/MGH.Core.Endpoint.Swagger/"]
RUN dotnet restore "Microservices/Security/src/Security.Endpoint.Api/Security.Endpoint.Api.csproj"
COPY . .
WORKDIR "/src/Microservices/Security/src/Security.Endpoint.Api"
RUN dotnet build "Security.Endpoint.Api.csproj" -c $BUILD_CONFIGURATION -o /app/build
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "Security.Endpoint.Api.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Security.Endpoint.Api.dll"]
